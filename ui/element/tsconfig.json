{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "src",
    "outDir": ".",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  // files, include and exclude from the inheriting config are always overwritten.
  "include": ["src/**/*.ts"],
  "exclude": [],
  "references": [
    {"path": "../../core/logger"},
    {"path": "../../core/type"},
    {"path": "../../core/i18n"},
    {"path": "../../core/router"},
    {"path": "../../core/fsm"}
  ]
}
